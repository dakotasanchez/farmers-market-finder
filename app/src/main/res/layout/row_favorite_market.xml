<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite_market_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/favorite_market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:padding="@dimen/cardview_padding"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/favorite_market_remove"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/favorite_market_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardview_padding"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/favorite_market_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingTop="@dimen/cardview_padding"
        android:layout_marginLeft="@dimen/cardview_padding"
        android:layout_marginRight="@dimen/cardview_padding"
        android:background="@color/material_gray_dark" />

</LinearLayout>
